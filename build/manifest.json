{
  "manifest_version": 2,
  "name": "Wordmarker",
  "description": "Marks specific keywords on specific (StackExchange) sites",
  "version": "0.1",
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": ["static/js/background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "js": [ "static/js/content.js" ],
    "matches": [
      "https://stackoverflow.com/*", "https://*.stackoverflow.com/*",
      "https://*.stackexchange.com/*"
    ]
  }],
  "icons": {
    "16": "icon-filled-64.png",
    "32": "icon-filled-64.png",
    "64": "icon-filled-64.png",
    "128": "icon-filled-64.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icon-outlined-64.png",
      "32": "icon-outlined-64.png"
    },
    "default_title": "Wordmarker",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
